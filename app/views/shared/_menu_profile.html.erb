<!-- Profile dropdown -->
<div class="relative ml-3" data-controller="dropdown">
  <div>
    <button
      type="button"
      class="relative flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800"
      data-action="dropdown#toggle click@window->dropdown#hide"
      aria-expanded="false"
      aria-haspopup="true"
    >
      <span class="absolute -inset-1.5"></span>
      <span class="sr-only">Open user menu</span>
      <img src="<%= current_user.image %>" alt="user profile image" class="h-8 w-8 rounded-full"  />
    </button>
  </div>

  <div
    class="transition transform absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
    role="menu"
    data-dropdown-target="menu"
    data-transition-enter-from="opacity-0 scale-95"
    data-transition-enter-to="opacity-100 scale-100"
    data-transition-leave-from="opacity-100 scale-100"
    data-transition-leave-to="opacity-0 scale-95"
    tabindex="-1"
  >
    <!-- Active: "bg-gray-100", Not Active: "" -->
    <%= link_to t("menu.your_profile"), "#" , class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1"  %>
    <%= link_to t("menu.settings"), "#" , class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1"  %>
    <hr>

    <% if current_user.admin %>
      <%= link_to t("menu.players"), players_path , class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1"  %>
      <%= link_to t("menu.create_team"), random_teams_path, class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1"  %>
      <hr>
    <% end %>

    <%= link_to t("menu.sign_out"), sign_out_path , class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1"  %>
  </div>
</div>

