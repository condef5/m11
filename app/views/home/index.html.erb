<section
  class="flex max-w-[820px] flex-col items-start gap-2 pt-8 md:pt-4 pb-8"
>
  <h1
    class="text-3xl font-bold leading-tight tracking-tighter md:text-5xl lg:leading-[1.1]"
  >
    Generate your football teams
  </h1>

  <span
    class="max-w-[480px] text-lg text-muted-foreground sm:text-xl"
    style="
      display: inline-block;
      vertical-align: top;
      text-decoration: inherit;
    "
  >
    Elevate your football experience with our app. <br>
    Discover innovative tools and features designed for true football aficionados.
  </span>

  <% if current_user %>
    <%= render_button 'sign out', variant: :danger, as: :link, href: :sign_out %>
  <% else %>
    <%= render_button 'sign in with google', as: :link, href: :sign_in %>
  <% end %>
</section>
