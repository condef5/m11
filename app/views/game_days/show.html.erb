<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @game_day %>

    <%= link_to 'Edit this game_day', edit_game_day_path(@game_day), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this game_day', game_day_path(@game_day), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to game_days', game_days_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
